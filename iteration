iteration = 0

while iteration < 16:
    count = 0
    
    for letter in "hello, world":
        count += 1
        if iteration % 4 == 0:
            break
            
    if iteration < 10:
        print("Iteration 0" + str(iteration) + "; count is: " + str(count))
    else:
        print("Iteration " + str(iteration) + "; count is: " + str(count))
        
    iteration += 1
